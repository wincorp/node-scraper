{
  // "compileOnSave": true,
  "compilerOptions": {
     "watch": true,
    /* Basic Options */                       
    "target": "es5",
    "module": "commonjs",     
    "typeRoots": ["node_modules/@types"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    
    "outDir": "dist",
    "baseUrl": "src",
    "strict": false,
    "moduleResolution": "node",                                              
    "sourceMap": true
  },
    "exclude": [
      "node_modules",
      "data"
    ],
      
  "include": [
    "src/**/*.ts"
  ]
}